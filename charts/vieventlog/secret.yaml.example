# Example Secret - DO NOT commit with real credentials!
# Create your own secret.yaml with real values and keep it out of git
#
# Note: clientSecret is hardcoded in the application and not configurable
#
# To create the secret from command line:
# kubectl create secret generic vieventlog-secrets \
#   --from-literal=vicare-email='ihre@email.de' \
#   --from-literal=vicare-password='ihr-passwort' \
#   --from-literal=vicare-client-id='ihre-client-id' \
#   --from-literal=vicare-account-name='Mein Haus' \
#   --from-literal=basic-auth-user='admin' \
#   --from-literal=basic-auth-password='geheim123'
#
# Or use this YAML (base64 encode the values first):
# echo -n 'ihre@email.de' | base64
#
apiVersion: v1
kind: Secret
metadata:
  name: vieventlog-secrets
  labels:
    app: vieventlog
type: Opaque
data:
  # Base64 encoded values (replace with your own)
  vicare-email: aWhyZUBlbWFpbC5kZQ==           # ihre@email.de
  vicare-password: aWhyLXBhc3N3b3J0           # ihr-passwort
  vicare-client-id: aWhyZS1jbGllbnQtaWQ=      # ihre-client-id
  vicare-account-name: TWVpbiBIYXVz           # Mein Haus (optional)

  # Optional: Basic Auth for web interface
  basic-auth-user: YWRtaW4=                   # admin
  basic-auth-password: Z2VoZWltMTIz          # geheim123
